= caption "New #{new_post.short_class_name}"
= form_for new_post, :html => { :id => 'instant_form' } do |f|
  .form-item.no-margin
    = f.text_area :content, :size => '40x2', :id => 'post_body'
  .left= link_to 'Advanced form', :action => :new
  %ul.button-group
    %li= f.submit 'Commit', :class => 'button'
  .clear
