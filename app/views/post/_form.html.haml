= caption @presenter.title, :highlight => true

= form_for @presenter.post do |f|
  - if @presenter.post.errors.any?
    %ul.errors
      - @presenter.post.errors.full_messages.each do |message|
        %li= message
  .form-item
    = f.text_field :title, :placeholder => 'Title'
  
  .form-item.no-margin
    = f.text_area :content, :size => '40x12', :placeholder => 'Preview <cut> Body', :class => 'hint', :id => 'post_body'
    .hint Use <code>&lt;cut&gt;</code> tag to cut preview. It is displayed on the index page.
  
  .left
    This text will be parsed by 
    = link_to 'Markdown', 'http://daringfireball.net/projects/markdown/syntax', :class => 'highlight', :target => '_blank'
  .actions
    - if @presenter.post.persisted?
      .button-group
        = link_to 'Destroy', @presenter.post, :method => :delete, :class => 'button danger'
    .button-group
      = f.submit commit_title, :class => 'button'
  .clear

