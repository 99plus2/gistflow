- presenter = Posts::ShowPresenter.new(post)
.list-item
  - cache presenter.cache_key do
    .title= presenter.title
    .avatar= avatar_image(post.user)
    .preview
      = presenter.preview.html_safe
    .clear
  .notice
    .button-group.minor-group
      - if user_signed_in?
        = link_to_memorize presenter.post
        = link_to_like presenter.post
      = link_to "Comments (#{presenter.comments_count})", post_path(presenter.post), :class => 'button icon comment'
    .button-group.minor-group
      - if current_user == post.user
        = link_to "Edit", { :action => :edit, :id => post.id }, :class => 'button icon edit'
      = link_to "Show", { :action => :show, :id => post.id }, :class => 'button primary'
  .clear