- presenter = Posts::ShowPresenter.new(post)
.post
  %h4= link_to presenter.title, post_path(presenter.post)
  .avatar= avatar_image(post.user, 26)
  .body= presenter.body
  .clear
  .caption.button-group.minor-group
    - if current_user == post.user
      = link_to "Edit", edit_post_path(post), :class => "button icon edit"
    = link_to "Comments (#{post.comments.size})", post_path(post), :class => "button icon comment"
  .clear