- presenter = Posts::ShowPresenter.new(post)
.post
  .title= presenter.title
  .avatar= avatar_image(post.user, 26)
  .preview= presenter.preview
  .clear
  .notice.button-group.minor-group
    = link_to "Remember", add_to_favorites_post_path(post), :method => :post, :class => 'button'
    - unless user_signed_in? or post.user == current_user
      = link_to "Like (#{presenter.likes_count})", like_post_path(post), :method => :post, :class => 'button icon like'
    = link_to "Comments (#{presenter.comments.size})", post_path(post), :class => 'button icon comment'
  .clear