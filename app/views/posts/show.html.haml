.list-item.markdown
  %h1= @presenter.title
  .body= @presenter.body
  - if user_signed_in?
    .notice.button-group.minor-group
      = link_to_memorize @presenter.post
      = link_to_like @presenter.post
    .clear

=caption 'Comments'

- if user_signed_in?
  = form_for @presenter.post.comments.build, :url => { :action => :comments, :id => @presenter.post.id } do |f|
    .form-item.no-margin
      = f.text_area :content, :size => '40x2', :id => 'post_body'
    %ul.left
      = f.check_box :question
      = f.label :question, 'Is it a Question?'
    %ul.button-group
      %li= f.submit 'Comment', :class => 'button'
    .clear

= render @presenter.comments
